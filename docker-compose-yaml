version : "3.3"

services:
 mysqldb:
  container_name: mysqldb1
  image: mysql:8
  restart: unless-stopped
  environment:
   MYSQL_ROOT_PASSWORD: 
  volumes:
    - /home/mysqldata:/var/lib/mysql
 spring_app:
  image: abdessalem007/spring
  container_name: spring-container
  restart: on-failure
  ports:
   - 8089:8089
  depends_on:     
   - mysqldb
